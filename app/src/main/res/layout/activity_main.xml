<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#305986"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/dijitalfist"
            android:layout_marginTop="5dp"
            />

        <RelativeLayout
            android:id="@+id/firstpatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:src="@drawable/dijitalgdpng"
                android:scaleType="centerCrop"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:textSize="40sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />

        </RelativeLayout>
        <Button
            android:id="@+id/restart"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/cirolebutton"
            android:layout_gravity="right"
            android:text="restart"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/dijitalashbi"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:layout_below="@id/firstpatan"
            />

    </RelativeLayout>

